# =============================================================================
# SPC Expense Management System - Environment Variables
# =============================================================================
# Copy this file to .env and fill in the values.
# Variables marked [REQUIRED] must be set. Others have defaults.

# -----------------------------------------------------------------------------
# Database [REQUIRED]
# -----------------------------------------------------------------------------
# PostgreSQL connection string
DATABASE_URL="postgresql://user:password@localhost:5432/spc_expense?schema=public"

# -----------------------------------------------------------------------------
# JWT Authentication [REQUIRED]
# -----------------------------------------------------------------------------
# Minimum 32 characters each. Generate with: openssl rand -base64 48
JWT_SECRET="your-jwt-secret-min-32-chars-change-in-production"
JWT_REFRESH_SECRET="your-refresh-secret-min-32-chars-change-in-production"

# Token expiration (format: Ns, Nm, Nh, Nd)
JWT_ACCESS_TOKEN_EXPIRES_IN="15m"
JWT_REFRESH_TOKEN_EXPIRES_IN="7d"

# -----------------------------------------------------------------------------
# Backend Server
# -----------------------------------------------------------------------------
PORT=3001
NODE_ENV="development"
CORS_ORIGIN="http://localhost:3000"

# -----------------------------------------------------------------------------
# Storage - Cloudflare R2 / S3-compatible [Optional]
# -----------------------------------------------------------------------------
# Required for receipt file uploads. Can be omitted for local development
# if receipt upload is not being tested.
S3_ENDPOINT="https://your-account-id.r2.cloudflarestorage.com"
S3_ACCESS_KEY_ID="your-r2-access-key"
S3_SECRET_ACCESS_KEY="your-r2-secret-key"
S3_BUCKET_NAME="spc-receipts"
S3_REGION="auto"

# -----------------------------------------------------------------------------
# OCR - Google Cloud Vision [Optional]
# -----------------------------------------------------------------------------
# Required for automatic receipt text extraction.
GOOGLE_CLOUD_PROJECT_ID="your-gcp-project-id"
GOOGLE_APPLICATION_CREDENTIALS="/path/to/service-account.json"

# -----------------------------------------------------------------------------
# Frontend [REQUIRED for web app]
# -----------------------------------------------------------------------------
NEXT_PUBLIC_API_URL="http://localhost:3001"

# -----------------------------------------------------------------------------
# Monitoring [Optional]
# -----------------------------------------------------------------------------
SENTRY_DSN=""
